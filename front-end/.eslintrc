{
	"extends": ["react-app", "prettier"],
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"arrowParens": "avoid",
				"semi": true,
				"trailingComma": "none",
				"endOfLine": "auto",
				"tabWidth": 2,
				"useTabs": true,
				"singleQuote": true,
				"printWidth": 150,
				"jsxSingleQuote": false
			}
		]
	}
}
